{
  "compilerOptions": {
    "target": "es2022", // Updated target
    "module": "nodenext",  // Changed to ESNext for ES Modules
    "lib": ["es2022"],   // Updated lib
    "outDir": "./dist", // Output compiled JS within server/dist
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "types": ["node", "express"] // Explicitly include types for node and express
  },
  "include": ["./*.ts"], // Include only .ts files in the current (server) directory
  "exclude": ["node_modules"]
}
